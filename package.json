{
  "name": "chaii",
  "packageManager": "bun@1.1.7",
  "private": true,
  "license": "GPL-3.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.ts{x,}\"",
    "clean": "rm -rf node_modules .turbo",
    "add-component": "bun --filter=@chaii/ui run add-component",
    "ui:add": "bun --cwd=packages/ui add-safe",
    "es:add": "bun --cwd=packages/config-eslint add-safe",
    "ts:add": "bun --cwd=packages/config-typescript add-safe",
    "tw:add": "bun --cwd=packages/config-tailwind add-safe",
    "web:add": "bun --cwd=apps/web add-safe"
  },
  "dependencies": {
    "@types/bun": "latest",
    "turbo": "^1.13.3"
  }
}
