{
  "name": "chaii",
  "packageManager": "bun@1.0.1",
  "private": true,
  "license": "GPL-3.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ui:add": "bun --cwd=packages/ui run add"
  },
  "devDependencies": {
    "@chaii/eslint-config": "workspace:*",
    "@chaii/typescript-config": "workspace:*",
    "@types/lodash": "^4.17.1",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.3",
    "@tailwindcss/container-queries": "^0.1.1",
    "lodash": "^4.17.21",
    "sharp": "^0.33.3"
  }
}
